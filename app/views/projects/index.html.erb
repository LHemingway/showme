
<!-- column, container of cards -->
<div class="container-fluid">
    <!-- Jumbotron intro -->
    <!-- Within the jumbotron, there is an if statement; when user is signed in, they can have access to creating a new project, whereas the public does not have these rights when on the index page -->
    <div class="jumbotron">
        <% if user_signed_in? %>
            <h1 class="display-3">Hello, <%= current_user.first_names %>!</h1>
        <% else %>
            <h1 class="display-3">Hello!</h1>
        <% end %>
        <p class="text-muted MutedJumbo">Welcome to the Sparta Global Project Library</p>
        <hr class="my-4">
        <p class="JumboText">Use this site to upload and view data about your projects! make sure to fill out everything correctly, with a detailed description and a snazzy screenshot. </p>
        <p class="lead">
        <% if user_signed_in? %>


        <a class="btn btn-primary btn-lg" <%= link_to 'Contribute a Project', new_user_project_path(current_user.id) %>
            </a>

        <% end %>
        </p>
    </div>


        <div class="grid">
            <div class="row">
            <% @projects.each do |project| %>
                <div class="col-4 ProjectItems">
                <% if @user_index %>
                    <figure class="effect-lily">               
                        <%= image_tag(project.screenshot) %>             
                        <%= link_to(user_project_url(@user.id, project.id)) do %>     
                            <figcaption>
                                <div>
                                    <h2><span <%= project.title %>></span></h2>
                                    <p<%= link_to project.url %></p>
                                </div>
                            </figcaption>   
                        <% end %>        
                    </figure>
                <% else %>
                    <figure class="effect-lily">  
                        <%= image_tag(project.screenshot) %>             
                        <%= link_to(user_project_url(project.users.first.id, project.id)) do %>
                            <figcaption>
                                <div>
                                    <h2><%= project.title %></h2>
                                </div>
                            </figcaption>   
                        <% end %>        
                    </figure>
                <% end %>
            </div>
<% end %>
        </div> 
</div>


