
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card cards">
        <div class="card-body card">
          
          
          <p>
            <h4>Description:</h4>
            <%= @project.description %>
          </p>
          
          <p>
            <h4>Technologies:</h4>
            <%= @project.technologies %>
          </p>
          
          <p>
            <h4>Url:</h4>
            <%= @project.url %>
          </p>
          
          <p>
            <h4>Public private:</h4>
            <%= @project.public_private %>
          </p>

          <button> <%= link_to 'Homepage', user_projects_path(@project.user) %> </button>
          
          <!-- If the user is signed in, then they have access to these buttons -->
          <% if user_signed_in? %>
            <button> <%= link_to 'Edit', edit_user_project_path(@project.user, @project) %> </button>
            <button> <%= link_to 'Destroy', user_project_path(@current_user, @project), method: :delete, data: { confirm: 'Are you sure?' } %> </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
